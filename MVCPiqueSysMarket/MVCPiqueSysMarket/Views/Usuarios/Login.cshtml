                @Html.EditorFor(model => model.Nome)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="Salvar" value="Salvar" class="btn btn-info" />
            </div>
        </div>
    </div>
}
