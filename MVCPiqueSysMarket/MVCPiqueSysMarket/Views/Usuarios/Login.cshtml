@model List<MVCPiqueSysMarket.Models.Cliente>

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Produtos</h4>
        <hr>

        <div class="form-group">
            @Html.LabelFor(cliente => cliente.Email, new { @class = "control-label col-md-2" })
