@model MVCPiqueSysMarket.Models.Cliente

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
    <div class="col-md-6" name ="Sidebar">
        <di class="form-horizontal ">    
            <h4>Login</h4>
            <hr>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                     @Html.EditorFor(model =>model.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Senha, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Senha)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <input type="submit" name="Salvar" value="Entrar" class="btn btn-info" />
                    </div>
                    <div class="col-md-2">
                        <input type="submit" name="Salvar" value="Esqueceu a Senha?" class="btn btn-info" />
                    </div>
                </div>:
            </div>
            <div class="col-md-12">
                Não é cadastrado ainda?
                <a href = "Cadastro" title = "Cadastro">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Cadastre - se
                </a>
            </div>
   </div>
}
